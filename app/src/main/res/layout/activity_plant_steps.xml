                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:inputType="textMultiLine"
                            android:padding="8dp"
                            android:text="TextView"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/textView_steps_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:inputType="textMultiLine"
                            android:padding="8dp"
                            android:text="TextView"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/textView_steps_6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:inputType="textMultiLine"
                            android:padding="8dp"
                            android:text="TextView"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/textView_steps_7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:inputType="textMultiLine"
                            android:padding="8dp"
                            android:text="TextView"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/textView_steps_8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:inputType="textMultiLine"
                            android:padding="8dp"
                            android:text="TextView"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/textView_steps_9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:inputType="textMultiLine"
                            android:padding="8dp"
                            android:text="TextView"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/textView_steps_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:inputType="textMultiLine"
                            android:padding="8dp"
                            android:text="TextView"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/textView_steps_11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:inputType="textMultiLine"
                            android:padding="8dp"
                            android:text="TextView"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/textView_steps_12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:inputType="textMultiLine"
                            android:padding="8dp"
                            android:text="TextView"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/textView_steps_13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:inputType="textMultiLine"
                            android:padding="8dp"
                            android:text="TextView"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/textView_steps_14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:inputType="textMultiLine"
                            android:padding="8dp"
                            android:text="TextView"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/textView_steps_15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:inputType="textMultiLine"
                            android:padding="8dp"
                            android:text="TextView"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/textView_steps_16"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:inputType="textMultiLine"
                            android:padding="8dp"
                            android:text="TextView"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/textView_steps_17"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:inputType="textMultiLine"
                            android:padding="8dp"
                            android:text="TextView"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/textView_steps_18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:inputType="textMultiLine"
                            android:padding="8dp"
                            android:text="TextView"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/textView_steps_19"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:inputType="textMultiLine"
                            android:padding="8dp"
                            android:text="TextView"
                            android:textColor="#000000" />
                    </LinearLayout>
                </ScrollView>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText_plant_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="2.5"
                    android:background="@drawable/borders_accent"
                    android:ems="5"
                    android:fontFamily="sans-serif"
                    android:hint="Name your Plant"
                    android:inputType="textPersonName"
                    android:textColor="#000000"
                    tools:layout_editor_absoluteX="18dp"
                    tools:layout_editor_absoluteY="523dp" />

                <Button
                    android:id="@+id/ButtonPlantSteps"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1.5"
                    android:background="@color/progress"
                    android:ellipsize="start"
                    android:fontFamily="casual"
                    android:text="Plant Now"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.92"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.98" />

            </LinearLayout>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>